---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import HeaderImage from '../images/header1.jpeg';
---

<header>
	<div class="header-container">
		<div class="gradient-overlay"></div>
		<Image src={HeaderImage} alt="Pianist Image" class="background-image" />
		<div class="content-container">
			<!-- <div class="verified-badge">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#2E77D0"/>
				</svg>
				<span>Artist</span>
			</div> -->
			<h1 class="artist-name">Kenny Taylor</h1>
			<div class="monthly-listeners">Composer & Producer</div>
			
			<div class="action-buttons">
				<button class="play-button">
					<svg viewBox="0 0 24 24" width="24" height="24">
						<path fill="currentColor" d="M8 5v14l11-7z"/>
					</svg>
				</button>
				<button class="follow-button">Follow</button>
				<button class="more-button">
					<svg viewBox="0 0 24 24" width="24" height="24">
						<path fill="currentColor" d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
					</svg>
				</button>
			</div>
		</div>
	</div>
</header>

<style>
	header {
		margin: 0;
		padding: 0;
		color: white;
	}

	.header-container {
		position: relative;
		width: 100%;
		min-height: 400px;
		display: flex;
		align-items: flex-end;
	}

	.background-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: 1;
	}

	.gradient-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			180deg,
			rgba(0,0,0,0) 0%,
			rgba(0,0,0,0.5) 50%,
			rgba(0,0,0,0.8) 100%
		);
		z-index: 2;
	}

	.content-container {
		position: relative;
		z-index: 3;
		padding: 2rem;
		width: 100%;
	}

	.verified-badge {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 14px;
		margin-bottom: 0.5rem;
	}

	.artist-name {
		font-size: 6rem;
		font-weight: 700;
		margin: 0.5rem 0;
		line-height: 1.1;
		color: rgba(255, 255, 255, 0.7);
	}

	.monthly-listeners {
		font-size: 14px;
		color: rgba(255, 255, 255, 0.7);
		margin-bottom: 1.5rem;
	}

	.action-buttons {
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.play-button {
		width: 56px;
		height: 56px;
		border-radius: 50%;
		background: #1ED760;
		border: none;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		color: black;
	}

	.follow-button {
		padding: 0.7rem 2rem;
		border: 1px solid rgba(255, 255, 255, 0.3);
		border-radius: 4px;
		background: transparent;
		color: white;
		font-weight: 600;
		cursor: pointer;
	}

	.more-button {
		width: 32px;
		height: 32px;
		border-radius: 50%;
		border: none;
		background: transparent;
		color: white;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	@media (max-width: 768px) {
		.artist-name {
			font-size: 3rem;
		}

		.header-container {
			min-height: 300px;
		}
	}
</style>